# Blockchain Network Configuration
SEPOLIA_RPC_URL=https://rpc.ankr.com/eth_sepolia
MAINNET_RPC_URL=https://rpc.ankr.com/eth

# Wallet Private Key (NEVER commit the actual .env file with real keys!)
# Get this from MetaMask: Account Details > Export Private Key
PRIVATE_KEY=your_private_key_here

# Etherscan API Key for contract verification (get from etherscan.io)
ETHERSCAN_API_KEY=your_etherscan_api_key_here

# Frontend Environment Variables (also add to frontend/.env.local)
# Contract Address (filled after deployment)
NEXT_PUBLIC_CONTRACT_ADDRESS=

# IPFS Configuration via Pinata (get from pinata.cloud)
NEXT_PUBLIC_PINATA_API_KEY=your_pinata_api_key_here
NEXT_PUBLIC_PINATA_SECRET_KEY=your_pinata_secret_key_here
